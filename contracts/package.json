{
  "name": "@hackmoney2026/contracts",
  "version": "1.0.0",
  "description": "Smart contracts for hackmoney2026",
  "private": true,
  "license": "ISC",
  "volta": {
    "node": "22.17.0",
    "yarn": "1.22.22"
  },
  "scripts": {
    "compile": "forge build",
    "test": "forge test",
    "test:verbose": "forge test -vvv",
    "deploy:distributor:arc": "source .env && forge script scripts/DeployMinestartersDistributor.s.sol --rpc-url arc-testnet --broadcast --verify --verifier blockscout --verifier-url 'https://testnet.arcscan.app/api/'",
    "deploy:distributor:sepolia": "source .env && forge script scripts/DeployMinestartersDistributor.s.sol --rpc-url sepolia --broadcast --verify",
    "deploy:usdc": "source .env && forge script scripts/DeployUSDC.s.sol --rpc-url arc-testnet --broadcast --verify --verifier blockscout --verifier-url 'https://testnet.arcscan.app/api/'",
    "deploy:factory": "source .env && forge script scripts/DeployFactory.s.sol --rpc-url arc-testnet --broadcast --verify --verifier blockscout --verifier-url 'https://testnet.arcscan.app/api/'",
    "deploy:usdc:dry": "source .env && forge script scripts/DeployUSDC.s.sol --rpc-url arc-testnet",
    "deploy:factory:dry": "source .env && forge script scripts/DeployFactory.s.sol --rpc-url arc-testnet",
    "clean": "forge clean"
  },
  "devDependencies": {
    "@types/node": "^25.0.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.2.0",
    "dotenv": "^17.2.3"
  }
}